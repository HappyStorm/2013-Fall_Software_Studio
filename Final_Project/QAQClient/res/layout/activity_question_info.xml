<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="@drawable/information"
			android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <TextView
        android:id="@+id/question_info_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_info_Index"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="@string/question_info_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="26sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/question_info_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_info_title_Content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/question_info_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_info_title_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_info_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/question_info_content_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_info_Content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/question_info_back_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="back"
        android:text="@string/question_info_back_button"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/LightYellow"
        android:textStyle="bold"
        android:textSize="20sp"
        android:shadowColor="#ff000000"  
	    android:shadowDx="2"  
	    android:shadowDy="2"       
	    android:shadowRadius="1"/>

    <ToggleButton
        android:id="@+id/question_info_like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_info_content_Content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/Honeydew"
        android:text="@string/question_info_like_button"
        android:textOff="@string/question_info_like_button_like"
        android:textOn="@string/question_info_like_button_dislike"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/question_info_Index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/question_info_index"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

	</RelativeLayout>
</ScrollView>