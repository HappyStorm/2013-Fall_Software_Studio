<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
				android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:background="@drawable/main"
			    android:orientation="vertical"  >

    <TextView
        android:id="@+id/main_search_TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="search"
        android:text="@string/main_search_textbutton"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Ivory"
        android:textSize="40sp"
        android:textStyle="bold|italic" 
        android:shadowColor="#ff000000"  
	    android:shadowDx="3.5"  
	    android:shadowDy="3.5"       
	    android:shadowRadius="2"/>

    <TextView
        android:id="@+id/main_build_TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="110dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="build"
        android:text="@string/main_build_textbutton"
        android:textColor="@color/Ivory"
        android:textSize="40sp"
        android:textStyle="bold|italic" 
        android:shadowColor="#ff000000"  
	    android:shadowDx="3.5"  
	    android:shadowDy="3.5"       
	    android:shadowRadius="2"/>

    <TextView
        android:id="@+id/main_exit_TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_build_TextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="exit"
        android:text="@string/main_exit_textbutton"
        android:textColor="@color/Ivory"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:shadowColor="#ff000000"  
	    android:shadowDx="3.5"  
	    android:shadowDy="3.5"       
	    android:shadowRadius="2" />
	
</RelativeLayout>